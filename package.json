{
  "devDependencies": {
    "@open-wc/building-rollup": "^1.9.4",
    "@open-wc/eslint-config": "^4.2.0",
    "@open-wc/testing": "^2.5.32",
    "@web/dev-server": "^0.1.10",
    "@web/test-runner": "^0.12.17",
    "deepmerge": "^4.2.2",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "playwright": "^1.11.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.43.1",
    "rollup-plugin-copy": "^3.4.0"
  },
  "scripts": {
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "build": "rimraf dist && rollup -c rollup.config.js && cp travela.css dist && cp _redirects dist",
    "start:build": "npm run build && web-dev-server --root-dir dist --app-index index.html --open --compatibility none",
    "start": "web-dev-server --app-index index.html"
  },
  "name": "travel-app",
  "version": "0.3.0",
  "description": "Webcomponent travel-app following open-wc recommendations",
  "author": "travel-app",
  "license": "MIT",
  "dependencies": {
    "@lion/ajax": "^0.11.0",
    "@lion/button": "^0.12.0",
    "@lion/core": "^0.17.0",
    "@lion/fieldset": "^0.19.1",
    "@lion/form": "^0.11.1",
    "@lion/form-core": "^0.13.0",
    "@lion/input": "^0.14.1",
    "@lion/validate-messages": "^0.6.1",
    "@vaadin/router": "^1.7.4",
    "cp": "^0.2.0",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "rules": {
      "import/extensions": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
